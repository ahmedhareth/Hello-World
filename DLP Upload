using Abp.AutoMapper;
using Abp.Modules;
using Abp.Reflection.Extensions;
using Integrant.Neurocrine.Authorization;

namespace Integrant.Neurocrine
{
    [DependsOn(
        typeof(NeurocrineCoreModule), 
        typeof(AbpAutoMapperModule))]
    public class NeurocrineApplicationModule : AbpModule
    {
        public override void PreInitialize()
        {
            Configuration.Authorization.Providers.Add<NeurocrineAuthorizationProvider>();
        }

        public override void Initialize()
        {
            var thisAssembly = typeof(NeurocrineApplicationModule).GetAssembly();

            IocManager.RegisterAssemblyByConvention(thisAssembly);

            Configuration.Modules.AbpAutoMapper().Configurators.Add(
                // Scan the assembly for classes which inherit from AutoMapper.Profile
                cfg => cfg.AddProfiles(thisAssembly)
            );
        }
    }
}
